@model PLD.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar Contraseña";
}

<div class="row sidebar">
</div>
<div class="row">
    <div class="col-12 ">
        @using (Ajax.BeginForm("ChangePassword", "Manage", new AjaxOptions
        {
            HttpMethod = "Post",
            UpdateTargetId = "divResultado",
            InsertionMode = InsertionMode.Replace
        }, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-header card-header-border1">
                    <h5 class="card-header-text">@ViewBag.Title <span class="text-danger">@(ViewData["errorMessage"] == null ? "": ViewData["errorMessage"] .ToString())</span></h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="md-group-add-on">
                                <span class="md-add-on">
                                    <i class="icofont icofont-key"></i>
                                </span>
                                <div class="md-input-wrapper">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "md-form-control" })
                                    @Html.LabelFor(m => m.OldPassword)
                                    <span class="md-line"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="md-input-wrapper">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "md-form-control" })
                                @Html.LabelFor(m => m.NewPassword)
                                <span class="md-line"></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="md-input-wrapper">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "md-form-control" })
                                @Html.LabelFor(m => m.ConfirmPassword)
                                <span class="md-line"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer card-footer-border1">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="f-right">
                        <button type="submit" class="btn btn-toyotaAzul">Cambiar Contraseña</button>
                    </div>
                </div>
            </div>

        }
    </div>
</div>



